<div class="container mb-4 mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card p-4">
                <div class="card-title text-center">
                    <h3>
                        Ürün Detayları
                    </h3>
                </div>
                <div class="img text-center">
                    <img src="{{product.images}}" alt="" class="img-fluid">
                </div>
                <div class="card-body">
                    <form action="/admin/product/update/:id" method="post" id="update_product_form" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="">Product Name</label>
                            <input type="text" class="form-control" placeholder="Product Name" value="{{product.name}}"
                                name="name">
                        </div>
                        <div class="form-group">
                            <label for="">Product Image</label>
                            <input type="file" class="form-control" placeholder="Product Name" name="image">
                        </div>
                        <div class="form-group">
                            <div id="editor"></div>
                            <input type="text" hidden name="description" id="description_input" value="{{product.description}}">
                        </div>
                        <div class="form-group">
                            <div id="features"></div>
                            <input type="text" hidden name="features" id="features_input" value="{{product.features}}">
                        </div>
                        <div class="form-group text-center">
                            <button class="btn btn-success btn-sm">
                                Update
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var description = new Quill('#editor', {
            theme: 'snow',
            placeholder: 'Product Description'
        });
        var feautres = new Quill('#features', {
            theme: 'snow',
            placeholder: 'Product Features'
        });

        description.root.innerHTML = $('#description_input').val();
        feautres.root.innerHTML = $('#features_input').val();
        $('#update_product_form').submit(function (e) {
            e.preventDefault();
            var description_value = description.root.innerHTML;
            var feautres_value = feautres.root.innerHTML;
            $('#description_input').val(description_value);
            $('#features_input').val(feautres_value);
            this.submit()
        })
    })
</script>